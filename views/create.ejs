<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>

    <h2>Add New Course:</h2>

    <div class="create-course">
        <form action="/courses" method="POST">
            <label for="department">Department:</label>
            <input type="text" id="department" name="department" required>
            <label for="number">Course Number:</label>
            <input type="number" id="number" name="number" required>
            <label for="title">Course Title:</label>
            <input type="text" id="title" name="title" required>
            <label for="teacher">Course Instructor:</label>
            <input type="text" id="teacher" name="teacher" required>
            <label for="credits">Credit Hours:</label>
            <input type="number" id="credits" name="credits" required>
            <label for="spotsTotal">Course Capacity:</label>
            <input type="number" id="spotsTotal" name="spotsTotal" required>
            <label for="description">Course Description:</label>
            <textarea id="description" name="description" rows="4" cols="60" required></textarea>
            <button>Submit</button>
        </form>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>